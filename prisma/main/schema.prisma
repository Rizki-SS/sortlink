generator client {
  provider = "prisma-client"
  output   = "../src/generated/main/prisma"
}

datasource db {
  provider = "postgresql"
}

enum DomainType {
  PUBLIC
  PRIVATE
}

model domains {
  id         String     @id @default(uuid()) @db.Uuid
  name       String     @unique
  userId     String
  teamId     String?
  type       DomainType @default(PUBLIC)
  isVerified Boolean    @default(false)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model links_shards {
  id        String   @id @default(uuid()) @db.Uuid
  hashId    String   @unique
  domainId  String
  shardKey  String
  hashRange BigInt?
  teamId    String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  linkTags link_rel_tags[]

  @@index([shardKey])
}

model links_folders {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  parentId  String?
  userId    String
  teamId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model link_tags {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  userId    String
  teamId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  links link_rel_tags[]
}

model link_rel_tags {
  linkId String @db.Uuid
  tagId  String @db.Uuid

  link links_shards @relation(fields: [linkId], references: [id], onDelete: Cascade)
  tag  link_tags    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([linkId, tagId])
  @@index([linkId])
  @@index([tagId])
}
