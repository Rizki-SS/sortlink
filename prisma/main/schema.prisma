generator client {
  provider = "prisma-client"
  output   = "../src/generated/main/prisma"
}

datasource db {
  provider = "postgresql"
}

enum DomainType {
  PUBLIC
  PRIVATE
}

model domains {
  id         String     @id @default(uuid()) @db.Uuid
  name       String     @unique
  userId     String
  teamId     String?
  type       DomainType @default(PUBLIC)
  isVerified Boolean    @default(false)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model links_shards {
  id        String   @id @default(uuid()) @db.Uuid
  hashId    String   @unique
  domainId  String
  shardKey  String
  hashRange BigInt?
  teamId    String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([shardKey])
}
